{
  "name": "linopress",
  "description": "Static site generator with GUI, React components and JSON Schema",
  "version": "0.0.1-0",
  "author": "Marc LÃ¶he <marc@marcloehe.de",
  "license": "MIT",
  "repository": "bfncs/linopress",
  "bin": {
    "linopress": "scripts/linopress",
    "linopress-start": "scripts/linopress-start",
    "linopress-build": "scripts/linopress-build"
  },
  "files": [
    "config",
    "public",
    "scripts",
    "src"
  ],
  "scripts": {
    "start": "./scripts/linopress start",
    "build": "./scripts/linopress build",
    "test": "node scripts/test.js --env=jsdom",
    "format": "prettier --single-quote --trailing-comma es5 --write \"{src,packages/*/src}/**/*.js\"",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "aphrodite": "^1.1.0",
    "autoprefixer": "6.7.2",
    "babel-core": "6.22.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "6.2.10",
    "babel-preset-react-app": "^2.2.0",
    "babel-runtime": "^6.20.0",
    "body-parser": "^1.17.2",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "commander": "^2.9.0",
    "connect-history-api-fallback": "1.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-spawn": "4.0.2",
    "css-loader": "0.26.1",
    "detect-port": "1.0.1",
    "dotenv": "2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^1.0.4",
    "eslint-loader": "1.6.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.10.0",
    "filesize": "3.3.0",
    "font-awesome": "^4.7.0",
    "foundation-sites": "^5.0.2",
    "fs-extra": "0.30.0",
    "fs-jetpack": "^1.0.0",
    "gzip-size": "3.0.0",
    "html-webpack-plugin": "2.24.0",
    "http-proxy-middleware": "0.17.3",
    "json-editor": "^0.7.28",
    "json-loader": "0.5.4",
    "mkdirp": "^0.5.1",
    "murmurhash": "0.0.2",
    "object-assign": "4.1.1",
    "postcss-loader": "1.2.2",
    "promise": "^7.1.1",
    "react": "^15.4.2",
    "react-dev-utils": "^0.5.0",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-tap-event-plugin": "^2.0.1",
    "recursive-readdir": "2.1.0",
    "redux": "^3.6.0",
    "static-site-generator-webpack-plugin": "^3.1.0",
    "strip-ansi": "3.0.1",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.14.0",
    "webpack-dev-server": "1.16.2",
    "webpack-manifest-plugin": "1.1.0",
    "whatwg-fetch": "2.0.2"
  },
  "devDependencies": {
    "babel-jest": "18.0.0",
    "concurrently": "^3.3.0",
    "husky": "^0.13.3",
    "jest": "18.1.0",
    "lint-staged": "^3.4.1",
    "prettier": "^1.3.1"
  },
  "proxy": "http://localhost:3001",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "git add"
    ]
  }
}
