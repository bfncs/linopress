{
  "name": "linopress",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "husky": "^0.13.3",
    "lint-staged": "^3.4.1",
    "prettier": "^1.3.1"
  },
  "scripts": {
    "start": "npm run start --prefix packages/linopress-generator",
    "start:dev": "npm run start:dev --prefix packages/linopress-generator",
    "build": "npm run build --prefix packages/linopress-generator",
    "format": "prettier --single-quote --trailing-comma es5 --write \"{src,packages/linopress-api/src,packages/linopress-editor/src}/**/*.js\"",
    "postinstall": "npm install --prefix packages/linopress-api && npm install --prefix packages/linopress-editor",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "git add"
    ]
  }
}
